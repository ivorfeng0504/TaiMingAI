<view class="page">
  <view class="page__bd">
    <form>
      <view class="weui-cells__title">任务信息</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓　　名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">联系方式</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="number" />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">地　　点</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" />
          </view>
        </view>
        <view class="weui-cell weui-cell_select">
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">上门时间</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange='visitTimeChange' value="{{visitTimeIndex}}" range="{{visitTime}}">
              <view class="weui-select weui-select_in-select-after">{{visitTime[visitTimeIndex]}}</view>
            </picker>
          </view>
        </view>
      </view>

      <view class="weui-cells__title">任务描述</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="文字描述" maxlength='200' style="height: 3.3em" />
            <view class="weui-textarea-counter">200字内</view>
          </view>
        </view>

        <view class="weui-cell">
          <view class="weui-cell__bd">
            <view class="weui-uploader">
              <view class="weui-uploader__hd">
                <view class="weui-uploader__title">上传图片(点击可预览选好的图片)</view>
                <view class="weui-uploader__info">{{imageList.length}}/{{3}}</view>
              </view>
              <view class="weui-uploader__bd">
                <view class="weui-uploader__files">
                  <block wx:for="{{imageList}}" wx:for-item="image" wx:key='*this'>
                    <view class="weui-uploader__file">
                      <image class="weui-uploader__img" src="{{image}}" data-src="{{image}}" bindtap="previewImage"></image>
                    </view>
                  </block>
                </view>
                <view class="weui-uploader__input-box">
                  <view class="weui-uploader__input" bindtap="chooseImage"></view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </form>
  </view>
</view>